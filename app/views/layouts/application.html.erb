<!DOCTYPE html>
<html>
<head>
  <title>Dinosaurs</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= stylesheet_link_tag 'buttons', media: 'all' %>
  <%= stylesheet_link_tag 'comments', media: 'all' %>
  <%= stylesheet_link_tag 'reviews', media: 'all' %>
  <%= csrf_meta_tags %>
  <link href='https://fonts.googleapis.com/css?family=Poiret+One' rel='stylesheet' type='text/css'>
</head>
<body>

  <nav class="top-bar">
    <ul class="title-area">
      <li class="name">
        <h1><a href="/">Dinosaurs</a></h1>

      </li>
    </ul>

    <section class="top-bar-section">
        <%- if current_user -%>
          <span id="user-show"><%= current_user.email %></span>
          <% if current_user.admin? %>
            <span id="admin-keyword">Admin</span>
          <% end %>
        <ul class="right">
          <li><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></li>
        </ul>
        <%- else -%>
        <ul class="right">
          <li><%= link_to 'Sign Up', new_user_registration_path %></li>
          <li><%= link_to 'Sign In', new_user_session_path %></li>
        </ul>
        <%- end -%>
      </ul>
    </section>
  </nav>

  <%- flash.each do |key, value| -%>
    <div class="flash flash-<%= key %>">
      <%= value %>
    </div>
  <%- end -%>

  <div class="row", id="page-wrap"> <%= yield %> </div>

  <%= javascript_include_tag 'application' %>
  <%= yield :extra_footer %>
</body>
</html>
