<%= image_tag "cute-dinosaur.png", class:"home-image"%>

<h1>List of Dinosaurs:</h1>
<div class="dinosaur-links">
  <% @dinosaurs.each do |dinosaur|%>
    <div class="dinosaur-link">
      <%= link_to dinosaur.name, dinosaur_path(dinosaur) %><br>
      <span class="dinosaur-desc"><%= dinosaur.description %></span>
    </div>
  <% end %>
</div>

<% if user_signed_in? %>
  <%= button_to "Create a dinosaur!", new_dinosaur_path, class: 'dino-crud-buttons button expand round medium', method: :get %>
<% else %>
  <div class="sign-in-message">
    <%= button_to "Sign in to create a dinosaur!", new_user_session_path, class: 'dino-crud-buttons button expand round medium', method: :get %>
  </div>
<% end %>
<%= paginate @dinosaurs %>
